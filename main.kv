#:import utils kivy.utils

FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#262626')
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {'right': 1, 'top': 0.9}
        size_hint: 1, 0.2
        source: 'icones/empresa06.jpg'
        id: foto_admin
    ScreenManager:
        pos_hint: {'right': 1, 'top': 0.7}
        size_hint: 1, 0.7
        id: screen_manager

        HomePage:
            name: 'homepage'
            id: homepage

        MenuPage:
            name: 'menupage'
            id: menupage

        AdicionarFuncionarioPage:
            name: 'adicionarfuncionariopage'
            id: adicionarfuncionariopage

        BuscarFuncionarioPage:
            name: 'buscarfuncionariopage'
            id: buscarfuncionariopage

        EditarFuncionarioPage:
            name: 'editarfuncionariopage'
            id: editarfuncionariopage

        ExcluirFuncionarioPage:
            name: 'excluirfuncionariopage'
            id: excluirfuncionariopage