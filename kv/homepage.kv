<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:'icones/fundo.jpg'
        Label:
            pos_hint: {'right':0.9, 'top': 0.9}
            size_hint: 0.8, 0.2
            text:'CONTROLE DE [color=#A2A9BE]FUNCIONÁRIO[/color]'
            bold: True
            markup: True

        TextInput:
            id: email
            hint_text: 'E-mail'
            pos_hint: {'right':0.9, 'top': 0.7}
            size_hint: 0.8, 0.1

        TextInput:
            id: senha
            password: True
            hint_text: 'Senha'
            pos_hint: {'right':0.9, 'top': 0.55}
            size_hint: 0.8, 0.1

        Label:
            id: mensagem_login
            text: '[color=#A2A9BE]Faça seu login[/color]'
            bold: True
            markup: True
            pos_hint: {'right':0.9, 'top': 0.4}
            size_hint: 0.8, 0.1

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:'icones/botão_login01.jpg' if self.state == 'normal' else 'icones/botão_login02.jpg'
            on_release: app.firebase.fazer_login(email.text, senha.text)
            text: 'Login'
            pos_hint: {'right':0.45, 'top': 0.3}
            size_hint: 0.4, 0.1

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:'icones/botão_login01.jpg' if self.state == 'normal' else 'icones/botão_login02.jpg'
            on_release: app.firebase.criar_conta(email.text, senha.text)
            text: 'Criar Conta'
            pos_hint: {'right':0.95, 'top': 0.3}
            size_hint: 0.4, 0.1

