<BuscarFuncionarioPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:'icones/fundo.jpg'
        Label:
            pos_hint: {'right':0.85, 'top': 1}
            size_hint: 0.7, 0.1
            bold: True
            text: 'BUSCAR FUNCIONÁRIO  -- [color=#A2A9BE]DIGITE O CPF[/color]'
            bold: True
            markup: True

        TextInput:
            id: buscar_funcionario
            hint_text: 'CPF'
            pos_hint: {'right':0.9, 'top': 0.9}
            size_hint: 0.8, 0.075

        TextInput:
            id: buscar_nome_funcionario
            hint_text: 'nome'
            pos_hint: {'right':0.9, 'top': 0.82}
            size_hint: 0.8, 0.075

        TextInput:
            id: buscar_endereco_funcionario
            hint_text: 'endereço completo'
            pos_hint: {'right':0.9, 'top': 0.74}
            size_hint: 0.8, 0.075

        TextInput:
            id: buscar_cidade_funcionario
            hint_text: 'cidade'
            pos_hint: {'right':0.9, 'top': 0.66}
            size_hint: 0.8, 0.075

        TextInput:
            id: buscar_estado_funcionario
            hint_text: 'estado'
            pos_hint: {'right':0.2, 'top': 0.58}
            size_hint: 0.1, 0.075

        TextInput:
            id: buscar_admissao_funcionario
            hint_text: 'adminssão'
            pos_hint: {'right':0.5, 'top': 0.50}
            size_hint: 0.4, 0.075

        TextInput:
            id: buscar_cargo_funcionario
            hint_text: 'cargo'
            pos_hint: {'right':0.9, 'top': 0.42}
            size_hint: 0.8, 0.075

        TextInput:
            id: buscar_salario_funcionario
            hint_text: 'salario'
            pos_hint: {'right':0.5, 'top': 0.34}
            size_hint: 0.4, 0.075

        TextInput:
            id: buscar_demissao_funcionario
            hint_text: 'demissão'
            pos_hint: {'right':0.5, 'top': 0.26}
            size_hint: 0.4, 0.075

        # botão de voltar
        FloatLayout:
            pos_hint: {'right': 1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#7F7F7F')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/botao_voltar.png'
                on_release: app.mudar_tela('menupage')

            ImageButton:
                pos_hint: {'right': 1, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/botao_busca.png'
                on_release: app.firebase.buscarfuncionario(buscar_funcionario.text)
                id: botao_buscar

