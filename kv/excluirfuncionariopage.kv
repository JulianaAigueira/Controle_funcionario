<ExcluirFuncionarioPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:'icones/fundo.jpg'
        Label:
            pos_hint: {'right':0.85, 'top': 1}
            size_hint: 0.7, 0.1
            text: 'EXCLUIR FUNCIONÁRIO -- [color=#A2A9BE]DIGITE O CPF[/color]'
            bold: True
            markup: True

        TextInput:
            id: buscar_funcionario
            hint_text: 'CPF'
            pos_hint: {'right':0.9, 'top': 0.9}
            size_hint: 0.8, 0.075

        TextInput:
            id: excluir_nome_funcionario
            hint_text: 'nome'
            pos_hint: {'right':0.9, 'top': 0.85}
            size_hint: 0.8, 0.075

        # botão de voltar
        FloatLayout:
            pos_hint: {'right': 1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#7F7F7F')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {'right': 0.2, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/botao_voltar.png'
                on_release: app.mudar_tela('menupage')

            ImageButton:
                pos_hint: {'right': 0.6, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/botao_busca.png'
                on_release: app.firebase.deletarfuncionario(buscar_funcionario.text)
                id: botao_buscar2

            ImageButton:
                pos_hint: {'right': 1, 'top': 0.9}
                size_hint: 0.2, 0.8
                source: 'icones/botao_excluir.png'
                on_release: app.firebase.deletarfinal(buscar_funcionario.text)
                id: botao_excluir